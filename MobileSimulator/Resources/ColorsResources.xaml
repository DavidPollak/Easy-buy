<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <LinearGradientBrush x:Key="BorderColorTextBox"
                          EndPoint="0.5,1"
                          StartPoint="0.5,0">
        <GradientStop Color="#FFc4c4c4"
                      Offset="0" />
        <GradientStop Color="#FFc4c4c4"
                      Offset="1" />
    </LinearGradientBrush>
    <LinearGradientBrush  x:Key="BackgroundColorTextBox"
                          EndPoint="0.5,1"
                          StartPoint="0.5,0">
        <GradientStop Color="#FFd1d1d1"
                      Offset="0" />
        <GradientStop Color="#FFFFFFFF"
                      Offset="0.3" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="BrushFilteredTextBoxForeground"
                      Color="#FF000000" />
</ResourceDictionary>